# =============================================================================
# CFP FUNDING TOOL - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Option 1: Use connection string (recommended for production/Railway)
DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Use individual database variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cfp_funding_tool
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Gnosis Chain RPC URL
GNOSIS_RPC_URL=https://rpc.gnosischain.com

# Private key for the wallet that will send wxHOPR tokens (without 0x prefix)
# Note: This wallet needs to have wxHOPR tokens and some xDai for gas fees
PRIVATE_KEY=your_private_key_here

# Alternative: Use encrypted private key for better security
# ENCRYPTED_PRIVATE_KEY=your_encrypted_private_key_here
# ENCRYPTION_PASSWORD=your_encryption_password

# wxHOPR token contract address on Gnosis Chain
WXHOPR_TOKEN_ADDRESS=0xD4fdec44DB9D44B8f2b6d529620f9C0C7066A2c1

# Amount of wxHOPR tokens to send per successful claim (in wei, 18 decimals)
# Default: 0.01 wxHOPR token
AIRDROP_AMOUNT_WEI=10000000000000000

# Amount of xDai to send per successful claim (in wei, 18 decimals)
# Default: 0.01 xDai
XDAI_AIRDROP_AMOUNT_WEI=10000000000000000

# =============================================================================
# LEGACY CONFIGURATION (for migration only)
# =============================================================================
# Secret codes for airdrop validation (comma-separated)
# NOTE: This is now managed in the database. Use this only for initial migration.
SECRET_CODES=DontTellUncleSam,SecretCode123,HiddenTreasure

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
