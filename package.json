{
  "name": "gnosis-airdrop-service",
  "version": "2.0.0",
  "description": "TypeScript-based airdrop distribution service for Gnosis Chain wxHOPR tokens",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "deploy": "./deploy.sh",
    "quick-deploy": "node scripts/quick-deploy.js",
    "security-check": "ts-node scripts/security-check.ts",
    "encrypt-key": "node scripts/encrypt-private-key.js",
    "validate-security": "ts-node scripts/validate-security.ts"
  },
  "keywords": ["airdrop", "gnosis", "xdai", "typescript", "web3", "gnosis-chain"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "web3": "^4.3.0",
    "crypto": "^1.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
