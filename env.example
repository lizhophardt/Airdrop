# Gnosis Chain RPC URL
GNOSIS_RPC_URL=https://rpc.gnosischain.com

# Private key for the wallet that will send wxHOPR tokens (without 0x prefix)
# Note: This wallet needs to have wxHOPR tokens and some xDai for gas fees
PRIVATE_KEY=your_private_key_here

# wxHOPR token contract address on Gnosis Chain
WXHOPR_TOKEN_ADDRESS=0xD4fdec44DB9D44B8f2b6d529620f9C0C7066A2c1

# Secret codes for airdrop validation (comma-separated)
# Each code can only be used once, regardless of the recipient address
SECRET_CODES=DontTellUncleSam,SecretCode123,HiddenTreasure

# Amount of wxHOPR tokens to send per successful claim (in wei, 18 decimals)
# Default: 0.01 wxHOPR token
AIRDROP_AMOUNT_WEI=10000000000000000

# Amount of xDai to send per successful claim (in wei, 18 decimals)
# Default: 0.01 xDai
XDAI_AIRDROP_AMOUNT_WEI=10000000000000000

# Server configuration
PORT=3000
NODE_ENV=development
