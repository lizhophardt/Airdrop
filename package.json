{
  "name": "gnosis-airdrop-service",
  "version": "2.0.0",
  "description": "TypeScript-based airdrop distribution service for Gnosis Chain wxHOPR tokens",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "deploy": "./deploy.sh",
    "quick-deploy": "node scripts/quick-deploy.js",
    "security-check": "ts-node scripts/security-check.ts",
    "encrypt-key": "node scripts/encrypt-private-key.js",
    "validate-security": "ts-node scripts/validate-security.ts"
  },
  "keywords": [
    "airdrop",
    "gnosis",
    "xdai",
    "typescript",
    "web3",
    "gnosis-chain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/joi": "^17.2.2",
    "@types/validator": "^13.15.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "validator": "^13.15.15",
    "web3": "^4.3.0",
    "web3-utils": "^4.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
